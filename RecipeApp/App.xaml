<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RecipeApp"
             xmlns:class="clr-namespace:RecipeApp.Classes"
             x:Class="RecipeApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <class:BoolToColorConverter x:Key="BoolToColorConverter" />
                    <class:InverseBoolConverter x:Key="InverseBoolConverter" />
                    <class:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
                    <class:NonZeroToBoolConverter x:Key="NonZeroToBoolConverter" />
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
